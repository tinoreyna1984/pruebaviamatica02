{
  "title": "User",
  "description": "Campos para validar usuarios",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "pattern" : "\\b(?=.*[A-Z])(?=.*\\d)^[A-Za-z0-9]{8,20}\\b",
      "minLength": 8,
      "maxLength": 20
    },
    "password": {
      "type": "string",
      "pattern": "^(?=.{8,})(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[@#$%^&+=]).*$",
      "minLength": 8
    },
    "accessId": {
      "type": "string",
      "pattern": "^(?!.*(\\d)\\1{3})\\d{10}$",
      "minLength": 10,
      "maxLength": 10
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "lastName": {
      "type": "string",
      "minLength": 2
    },
    "role": {
      "type": "string",
      "default": "USER",
      "enum": ["USER", "ADMINISTRATOR"]
    }
  },
  "required": ["username", "password", "accessId", "name", "lastName"]
}
